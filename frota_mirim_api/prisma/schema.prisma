generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Modelo de Usuário (Motoristas, Admins, etc)
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   // "ADMIN", "MOTORISTA", "GERENTE"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Um usuário pode ser responsável por vários veículos
  vehicles  Vehicle[]

  @@map("users")
}

// Modelo de Veículo
model Vehicle {
  id            String   @id @default(uuid())
  plate         String   @unique
  brand         String
  model         String
  year          Int
  color         String
  status        String   @default("DISPONIVEL") // "DISPONIVEL", "EM_ROTA", "MANUTENCAO"
  
  // Relacionamento com motorista (opcional)
  driver        User?    @relation(fields: [driverId], references: [id])
  driverId      String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("vehicles")
}