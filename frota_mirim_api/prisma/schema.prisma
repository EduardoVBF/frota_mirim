generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Modelo de Usu√°rio (Motoristas, Admins, etc)
model User {
  id           String  @id @default(uuid())
  firstName    String
  lastName     String
  email        String  @unique
  passwordHash String
  role         String  @default("admin")
  isActive     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}