{
  "compilerOptions": {
    "target": "ES2020",
    // "module": "Node16",
    // "moduleResolution": "node16",

    // USANDO CommonJS PORQUE TEM PROBLEMAS COM O NODE16 EM AMBIENTE DE PRODUÇÃO
    "module": "CommonJS",
    "moduleResolution": "node10",
    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    // "ignoreDeprecations": "6.0",
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,

    "resolveJsonModule": true
  },
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist"]
}
